{
  "name": "circuit-language-server",
  "displayName": "Circuit Language Server",
  "description": "Language server for Circuit DSL",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:circuit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "circuit",
        "aliases": [
          "Circuit",
          "circuit"
        ],
        "extensions": [
          ".circuit"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "circuit",
        "scopeName": "source.circuit",
        "path": "./syntaxes/circuit.tmLanguage.json"
      }
    ]
  },
  "files": [
    "out/**/*",
    "syntaxes/**/*",
    "language-configuration.json",
    "bin/**/*"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-bin",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "copy-bin": "node scripts/copy-bin.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "eslint": "^8.34.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}