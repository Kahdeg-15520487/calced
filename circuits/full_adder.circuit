import "half_adder.circuit"

circuit FullAdder {
    inputs { a, b, cin }
    outputs { sum, cout }
    gates {
        ha1 = Circuit("HalfAdder")
        ha2 = Circuit("HalfAdder")
        or1 = OR()
    }
    connections {
        a -> ha1.in.a
        b -> ha1.in.b
        ha1.out.sum -> ha2.in.a
        cin -> ha2.in.b
        ha1.out.carry -> or1.in[0]
        ha2.out.carry -> or1.in[1]
        ha2.out.sum -> sum
        or1.out -> cout
    }
}